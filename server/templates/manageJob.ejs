<%- include('./partials/header'); %>

<main style="font-family: Arial, sans-serif; line-height: 1.6; padding: 20px">
  <div
    style="
      background-color: white;
      padding: 20px;
      max-width: 600px;
      margin: 20px auto;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    "
  >
    <p style="font-size: 16px; color: #333; margin: 0 0 20px">Hello,</p>
    <p style="font-size: 16px; color: #333; margin: 0 0 20px"><%= Message %></p>
    <a
      href="<%= Link || '#' %>"
      target="_blank"
      rel="noopener noreferrer"
      style="
        display: inline-block;
        background-color: #655ac0;
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        margin-top: 20px;
      "
    >
      <%= LinkText || 'Learn More' %>
    </a>
    <p
      style="
        font-size: 16px;
        color: #655ac0;
        font-weight: bold;
        margin: 20px 0 0;
      "
    >
      NursingFront Team
    </p>
  </div>
</main>

<%- include('./partials/footer'); %>
