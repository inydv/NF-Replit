<%- include('./partials/header'); %>

<main style="font-family: Arial, sans-serif; line-height: 1.6; padding: 20px">
  <div
    style="
      background-color: white;
      padding: 20px;
      max-width: 600px;
      margin: 20px auto;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    "
  >
    <p style="font-size: 16px; color: #333; margin: 0 0 20px">Hello,</p>
    <p style="font-size: 16px; color: #333; margin: 0 0 20px">
      Thank you for registering with NursingFront! To complete your registration and activate your account, please verify your email address by clicking the button below.
    </p>
    <p style="font-size: 15px; color: #d9534f; margin: 0 0 20px">
      Please note: This verification link is valid for 48 hours.
    </p>
    <a
      href="<%= verifyLink %>"
      target="_blank"
      rel="noopener noreferrer"
      style="
        display: inline-block;
        background-color: #655ac0;
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        margin-top: 20px;
      "
    >
      Verify Account
    </a>
  </div>
</main>

<%- include('./partials/footer'); %> 